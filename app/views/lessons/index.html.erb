
<div class="container">
  <% if current_user.role == :teacher %>

    <%= render 'teachers_index' %>

    <div class="container">
      <div class="pagination">
        <%= will_paginate @lessons_teachers, renderer: @renderer %>
      </div>
    </div>

  <% elsif current_user.role == :user %>

  <% if current_user.subscribed? %>
    <% if current_user.expires_at? %>
        <div class="container">
          <%=link_to t('subscribe_again'), memberships_path, class:"btn btn-warning btn-lg btn-block" %>
        </div>

        <br>
    <% end %>
  <% else %>

    <div class="container">
      <%=link_to t('choose_membership'), memberships_path, class:"btn btn-warning btn-lg btn-block" %>
    </div>

    <br>
    
  <% end %>  

    <%= render 'students_index' %>

    <div class="container">
      <div class="pagination">
        <%= will_paginate @lessons_students, renderer: @renderer %>
      </div>
    </div>

  <% elsif current_user.role == :admin %>

    <%= render 'admin_index' %>


    <br><br>

    <div class="container">
      <div class="pagination">
        <%= will_paginate @lessons, renderer: @renderer %>
      </div>
    </div>

  <% end %>
</div>
