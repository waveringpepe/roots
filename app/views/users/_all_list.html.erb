  <div class="container" >
    <h1>All users</h1>
    <p><strong>Total: </strong><%= @users.total_entries %></p>

    <br>

    <input class="form-control" id="myInput" type="text" placeholder="Filtra..">
  </div>

  <br>

  <div class="container">
    <div class="table-responsive-sm">
      <table class="table" >
        <thead>
          <tr>
            <th>Created at</th>
            <th>Name</th>
            <th>Country</th>
            <th>Rol</th>
            <th>Dinero que se les debe</th>

            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody id="filterTable">
          <% @users.each do |user| %>
            <tr>
              <td><%= user.created_at.to_formatted_s(:short) %></td>
              <td><%= link_to user.name, user  %></td>
              <td><%= user.country_name  %></td>
              <td><%= user.role %></td>
              <td><%= user.lessons.where( status_id: "Completada", payment_id: "No").sum(:time_duration_id)/60*200 + user.lessons.where( status_id: "Perdida por el estudiante", payment_id: "No").sum(:time_duration_id)/60*200 - user.lessons.where( status_id: "Perdida por el profesor", payment_id: "No").sum(:time_duration_id)/60*200 %> MXN</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>


  <script src="assets/javascripts/filer_table.js"></script>





 