<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <h1>Crms</h1>
  </div>
  <br>
  <div class="row float-right">
    <%= link_to 'Agregar estudiante', new_crm_path, class: " btn btn-primary" %>
  </div>
  <br>
</div>

<br><br>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Estatus privado</th>
        <th>Estatus público</th>
        <th>Balance de créditos</th>
        <th>Créditos comprados</th>
        <th># de veces de renovación</th>
        <th>Commentarios</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @crms.each do |student| %>
        <tr>
          <td><%= student.user.name %></td>
          <td><%= student.private_status %></td>
          <td><%= student.public_status %></td>
          <td><%= student.credits_balance %></td>
          <td><%= student.buy_credits %>
          <td><%= student.subscription_renewal %></td>
          <td><%= student.comment %></td>
          <td><%= link_to 'Show', student %></td>
          <td><%= link_to 'Edit', edit_crm_path(student) %></td>
          <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


