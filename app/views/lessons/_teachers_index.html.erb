
  <% if current_user.students.ids.empty? %>
  <div class="container">
    <h2>Aún no tienes estudiantes, espera a que se te asignen para que puedas añadir clases.</h2>
  </div>

  <br>
  
  <% else %>

  <span><%= link_to 'New Lesson', new_lesson_path, class: "btn btn-primary float-right" %></span>

  <% end %>

<div class="container">
<h1>Clases</h1><br>
  <table class="table">
    <thead>
      <tr>
        <th>Tipo de clase</th>
        <th>Estudiante</th>
        <th>Fecha</th>
        <th>Duración</th>
        <th>Idioma</th>
        <th>Estatus</th>
        <th>Pago al profesor</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% for user in @user.lessons %>
        <tr>
          <td><%= link_to user.class_type_id, user %></td>
          <td> <%= link_to User.find_by(id: "#{user.student_id}").name, "users/#{user.student_id}" %></td>          
          <td><%= user.date_id.to_formatted_s(:long) %></td>
          <td><%= user.time_duration_id/60 %><p>Horas</p></td>
          <td> <%= Language.find_by(id: "#{user.language_id}").name %></td>
          <td><%= user.status_id %></td>
          <td><%= user.payment_id %></td>
          <td><%= link_to '', edit_lesson_path(user),class:"fa fa-edit fa-x" %></td>
          <td><%= link_to '', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-close fa-x",style:"color:#DC3C45" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
