
<div class="container">
  <span><%= link_to 'Crear Match', new_match_path, class:"btn btn-primary float-right" %></span>
</div>


<div class="container">
  <h1>Matches</h1><br/><br/>
  <table class="table">
    <thead>
      <tr>
        <th>Match ID</th>
        <th>ID</th>
        <th>Profesor</th>
        <th>ID</th>
        <th>Estudiante</th>
        <th>Idioma</th>        
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @matches.each do |match| %>
        <tr>
          <td><%= link_to match.id, match %></td>
          <td><%= match.user_id %></td>
          <td><%= User.find_by(id: "#{match.user_id}").name %></td>
          <td><%= match.student_id %></td>
          <td><%= User.find_by(id: "#{match.student_id}").name %></td>
          <td><%= Language.find_by(id: "#{match.language_id}").name %></td>
          <td><%= link_to '', edit_match_path(match), class:"fa fa-edit fa-x" %></td>
          <td><%= link_to '', match, method: :delete, data: { confirm: 'Are you sure?' }, class:"fa fa-close fa-x",style:"color:#DC3C45" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>
</div>