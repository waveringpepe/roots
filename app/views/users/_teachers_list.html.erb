<div class="container" >
  <h1>Teachers</h1> Total <%= User.where(roles:"teacher").count %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dinero que se les debe</th>
        <th colspan="3">
      </tr>
    </thead>

    <tbody>
      <% @users.where(roles: :teacher).each do |user| %>
        <tr>
          <th scope="col"><%= link_to user.name, user  %></th>
          <th><%= user.lessons.where( status_id: "Completada", payment_id: "No").sum(:time_duration_id)/60*200 + user.lessons.where( status_id: "Perdida por el estudiante", payment_id: "No").sum(:time_duration_id)/60*200 - user.lessons.where( status_id: "Perdida por el profesor", payment_id: "No").sum(:time_duration_id)/60*200 %> MXN</th>
        </tr>
        </tr>
      <% end %>
    </tbody>
  </table>
</div> 

<br>

