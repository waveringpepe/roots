  <div class="container" >
    <div>
      <h1>All users</h1>
      <p><strong>Total: </strong><%= @users.total_entries %></p>
    </div>
  </div>
    
  <br>
  
  <div class="container">
    <div class="row">
      <div class="col-sm-3">
        <%= link_to "Panel de profesores", expert_profiles_path, class: "btn btn-outline-success" %>
      </div><br><br>
      <div class="col-sm-1">
        <%= link_to "Panel de estudiantes", crms_path, class: "btn btn-outline-info" %>
      </div>
    </div>
  </div>
  <br>

  <br><br><br>

  <div class="container">
    <div class="table-responsive-sm">
      <table class="table">
          <thead>
            <tr class="text-center">
              <th>Name</th>
              <th>Teléfono</th>
              <th>Idioma (aprende o enseña)</th>
              <th>Membresía</th>
              <th>Clases próximas</th>
              <th>País</th>
              <th>Horario</th>
              <th colspan="3">
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr class="text-center">
                <td><%= link_to user.name.titleize, user  %></td>
                <td><%= user.phone_number  %></td>
                <td><% if user.language_id == "nil" %>
                      <% if user.teach_language == "nil" %>

                      <% else %>
                        <%= Language.find_by(id: user.teach_language).name  %>
                      <% end %>
                    <% else %>
                      <%= Language.find_by(id: user.language_id).name  %>
                    <% end %>
                </td>
                <td><%= Plan.find_by(id: user.plan_id).name.titleize  %></td>
                <td><% if user.has_roles?(:teacher) %>

                      <%= user.lessons.where( status_id: "Próxima").count(:time_duration_id) %>
                    <% else %>
                      <%= user.inverse_lessons.where( status_id: "Próxima").count(:time_duration_id) %>
                    <% end %>
                </td>
                <td><%= user.country_name %></td>
                <td><%= user.schedule %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>


  <script src="assets/javascripts/filer_table.js"></script>





 