
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'teacher_form'}) do |f| %>

  <%= hidden_field_tag 'plan', params[:plan] %>

    <div class="container mt-4">
      <h4 class="mb-3">Contact information</h4>
    </div>
    <div class="card rounded d-flex p-2 bd-highlight bg-light">
      <div class="row">
        <div class="form-group col-md-4">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control", placeholder:"Write your e-mail" %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"form-control",placeholder:"Password" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control", id:"exampleInputPassword1", placeholder:"Password confirmation" %>
        </div>  
      </div>

      <div class="row">
        <div class="form-group col-md-4">
          <%= f.label :name, "Full name" %><br />
          <%= f.text_field :name, class:"form-control", placeholder:"Full name" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :skype %><br />
          <%= f.text_field :skype, class:"form-control", placeholder:"Skype ID" %>
        </div>

        <div class="form-group col-md-4">
          <%= f.label :phone_number %><br />
          <%= f.text_field :phone_number, class:"form-control", placeholder:"Whatsapp number" %>
        </div>
      </div>
    </div>
    <div class="container mt-4">
      <h4 class="mb-3">Profile information</h4>
    </div>
    <div class="card rounded d-flex p-2 bd-highlight bg-light">
      <div class="row">
        <div class="form-group col-md-4">
            <%= f.label :speak_language, "Select your native language" %>
            <%= f.select :speak_language, options_for_select(Language.options, params[:speak_language]),{}, required: true, class: "form-control" %>
        </div>
        <div class="form-group col-md-4">
            <%= f.label :teach_language, "Select the language you want to teach" %>
            <%= f.select :teach_language, options_for_select(Language.options, params[:teach_language]),{}, required: true, class: "form-control" %>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :carrear_id, "Degree" %><br />
          <%= f.text_field :carrear_id, class:"form-control", placeholder:"Degree" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <%= f.label :country , "Select your native country" %> <br/>
          <%= f.country_select :country, ["Mexico", "United States"],options = {}, html_options = {:class => "form-control", :id => "payment_country"} %> 
        </div>
        <div class="form-group col-md-4">
          <%= f.label :city_id, "Native city" %><br />
          <%= f.text_field :city_id, class:"form-control", placeholder:"City" %>
        </div> 
        <div class="form-group col-md-4">
          <%= f.label :actual_country , "Select your current country" %> <br/>
          <%= country_select("user", "country", { include_blank: 'Select a country' }, { class: 'form-control' }) %>

        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.label :birth_date, "Select your birthday" %>
          <%= f.date_select :birth_date, 
                       { 
                        :order => [:day, :month, :year],
                        :start_year => 1920, 
                        :end_year => Time.now.year
                       }, 
                       {:class => "form-control mt-2"}  %>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :university_id, "Institution where you studied" %><br />
          <%= f.text_field :university_id, class:"form-control", placeholder:"e.g. Tec de Monterrey" %>
        </div>          
      </div>
    </div>

    <div class="container mt-4">
      <h4 class="mb-3">Experience teaching</h4>
    </div>
    <div class="card rounded d-flex p-2 bd-highlight bg-light">
      <div class="row">
        <div class="form-group col-md-12">
          <%= f.label :experience_teaching, "Experience teaching" %><br />
          <%= f.text_field :experience_teaching, class:"form-control", placeholder:"Tell us about your experience teaching" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :certificate_id, "Certificates" %><br />
          <%= f.text_field :certificate_id, class:"form-control", placeholder:"e.g. toefl expert" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-4">
          <%= f.label :years_teaching, "Years teaching" %><br />
          <%= f.text_field :years_teaching, class:"form-control", placeholder:"e.g.(8 years)" %>
        </div>
        <div class="form-group col-md-8">
          <%= f.label :institutions_teach, "Institutions" %><br />
          <%= f.text_field :institutions_teach, class:"form-control", placeholder:"e.g. Alianza francesa, UP, ITESM" %>
        </div>
      </div>
    </div>


    <div class="container mt-4">
      <h4 class="mb-3">Availability and preferences</h4>
    </div>
    <div class="card rounded d-flex p-2 bd-highlight bg-light">
      <div class="row">
        <div class="form-group col-md-12">
          <%= f.label :type_student, "Type of student" %><br />
          <%= f.text_field :type_student, class:"form-control", placeholder:"Select the students you would like to teach" %>
        </div>
        <div class="form-group col-md-12">
          <%= f.label :schedule, "Schedule" %><br />
          <%= f.text_field :schedule, class:"form-control", placeholder:"Schedule" %>
        </div>
        <div class="form-group col-md-4">
            <%= f.label :time_zone, 'Time Zone:', :class => "col-xs-3" %>
            <%= f.time_zone_select(:time_zone, nil, {}, {class: "form-control"})%>
        </div>
      </div>
    </div>

  <div class="container mt-4">
    <div class="d-flex p-2 bd-highlight mt-4">
      <div class="row">
        <div class="actions col-md-">
          <%= f.submit "Sign up", class:"btn btn-primary", id: "signup-btn" %>
        </div>
      </div>
    </div>
<% end %>
