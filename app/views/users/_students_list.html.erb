<div class="container" >
  <h1>Students</h1> <%= User.where(roles:"user").count %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3">Name</th>
        <th colspan="3">Language learning</th>
      </tr>
    </thead>

    <tbody>
      <% @users.where(roles: :user).each do |user| %>
        <tr>
          <th colspan="3"><%= link_to user.name, user  %></th>
          <th colspan="3"><%= user.language_id  %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>