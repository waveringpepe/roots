
<span><%= link_to 'New Lesson', new_lesson_path, class: "btn btn-primary float-right" %></span>
<h1>Classes</h1><br>
<table class="table">
  <thead>
    <tr>
      <th>ID de la clase</th>
      <th>Fecha de creaci贸n</th>
      <th>Tipo de clase</th>
      <th>Estudiante</th>
      <th>Profesor</th>
      <th>Fecha</th>
      <th>Duraci贸n</th>
      <th>Idioma</th>
      <th>Estatus</th>
      <th>Pago al profesor</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.id, lesson %></td>
        <td><%= lesson.created_at %></td>
        <td><%= lesson.class_type_id %></td>
        <td> <%= link_to User.find_by(id: "#{lesson.student_id}").name, "users/#{lesson.student_id}" %></td>
        <td> <%= link_to User.find_by(id: "#{lesson.user_id}").name, "users/#{lesson.user_id}" %></td>
        <td><%= lesson.date_id.to_formatted_s(:long) %></td>
        <td><%= lesson.time_duration_id/60 %><p>Horas</p></td>
        <td> <%= Language.find_by(id: "#{lesson.language_id}").name %></td>
        <td><%= lesson.status_id %></td>
        <td><%= lesson.payment_id %></td>
        <td><%= link_to '', edit_lesson_path(lesson), class:"fa fa-edit fa-x" %></td>
        <td><%= link_to '', lesson, method: :delete, data: { confirm: 'Are you sure?' },class:"fa fa-close fa-x", style:"color:#DC3C45" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<hr>
<p>Total: <%= Lesson.sum(:time_duration_id)/60 %> Horas</p>
<p>Total de clases: <%= Lesson.count(:time_duration_id) %> </p>
