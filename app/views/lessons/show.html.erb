<div class="container">
  <h1><%= t('lessons_title_1') %> </h1>

  <hr>

  <p id="notice"><%= notice %></p>

  <p>
    <strong><%= t('teacher_name_class') %>:</strong>
    <%= User.find_by(id: "#{@lesson.user_id}").name %>
  </p>

  <p>
    <strong><%= t('student_name_class') %>:</strong>
    <%= User.find_by(id: "#{@lesson.student_id}").name %>

  </p>

  <p>
    <strong><%= t('class_language') %>:</strong>
    <%= Language.find_by(id: "#{@lesson.language_id}").name %>
  </p>

  <p>
    <strong><%= t('type_of_class') %>:</strong>
    <%= @lesson.class_type_id %>
  </p>

  <p>
    <strong><%= t('incoming_date_class') %>:</strong>
    <%= @lesson.date_id %>
  </p>

  <p>
    <strong><%= t('class_duration') %>:</strong>
    <%= @lesson.time_duration_id/60 %> Hr
  </p>

  <p>
    <strong><%= t('status_class') %>:</strong>
    <%= @lesson.status_id %>
  </p>

  <p>
    <strong><%= t('paid_class') %>:</strong>
    <%= @lesson.payment_id %>
  </p>

  <%= link_to t('edit'), edit_lesson_path(@lesson) %> |
  <%= link_to t('back'), lessons_path %>
</div>
