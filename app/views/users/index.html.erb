<p id="notice"><%= notice %></p>

<div class="container">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#students">Students</a></li>
      <li class="breadcrumb-item"><a href="#teachers">Teachers</a></li>
      <li class="breadcrumb-item active" aria-current="page">All</li>
    </ol>
  </nav>
</div>




<div class="container" >
  <h1>Students</h1> <%= User.where(roles:"user").count %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3">Name</th>
      </tr>
    </thead>

    <tbody>
      <% @users.where(roles: :user).each do |user| %>
        <tr>
          <th scope="col"><%= link_to user.name, user  %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>



<div class="container" >
  <h1>Teachers</h1> Total <%= User.where(roles:"teacher").count %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3">Name</th>
      </tr>
    </thead>

    <tbody>
      <% @users.where(roles: :teacher).each do |user| %>
        <tr>
          <th scope="col"><%= link_to user.name, user  %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="container" >
  <h1>All users</h1> Total: <%= User.count %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3">Name</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <th scope="col"><%= link_to user.name, user  %></th>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
